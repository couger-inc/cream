{
  "name": "cream",
  "version": "0.0.1",
  "description": "C.R.E.A.M. - Confidential Reliable Ethereum Anonymous Mixer",
  "main": "index.js",
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "npm run setup && npm run compile && npm run migrate",
    "build:lerna": "npx lerna run build",
    "compile": "npx truffle compile",
    "exit": "lsof -i :8545 | grep node | grep -v grep | awk '{ print \"kill -9\", $2 }' | sh",
    "migrate": "npx truffle migrate",
    "preworkflow": "./scripts/pre-workflow.sh",
    "setup": "cd circuits && ./scripts/setup.sh",
    "test": "export NODE_OPTIONS=--experimental-worker && npx truffle test",
    "test:workflow": "ganache-cli & npm run compile && npm run migrate && npm run test && npm run exit"
  },
  "author": "Kazuaki Ishiguro <kazuaki@couger.co.jp>",
  "license": "ISC",
